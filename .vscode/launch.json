{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "args": [],
            "program": "${workspaceFolder}/target/debug/exec",
            "windows": {
                "program": "${workspaceFolder}/target/debug/exec.exe"
            },
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps/;${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": [
                "rust"
            ],
            "sourceMap": {
                "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/src/rust"
            }
        }
    ]
}
